<div class="max-w-6xl mx-auto">
  <!-- Hero Section -->
  <div class="text-center py-16">
    <h1 class="text-5xl font-bold text-gray-900 mb-6">
      Connect. Collaborate. Grow.
    </h1>
    <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
      The premier hub for marketing agencies to find strategic partners, share overflow work, and build lasting collaborations.
    </p>
    <div class="flex justify-center space-x-4">
      <a href="/register" class="bg-blue-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-700">
        Register Your Agency
      </a>
      <a href="/projects" class="bg-white text-blue-600 border-2 border-blue-600 px-8 py-3 rounded-lg text-lg font-semibold hover:bg-blue-50">
        Explore Projects
      </a>
    </div>
  </div>

  <!-- Features -->
  <div class="grid md:grid-cols-3 gap-8 py-16">
    <div class="bg-white p-8 rounded-lg shadow-md text-center">
      <div class="text-4xl text-blue-600 mb-4">
        <i class="fas fa-handshake"></i>
      </div>
      <h3 class="text-xl font-bold mb-3">Find Partners</h3>
      <p class="text-gray-600">Connect with vetted agencies that complement your services and expertise.</p>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-md text-center">
      <div class="text-4xl text-blue-600 mb-4">
        <i class="fas fa-project-diagram"></i>
      </div>
      <h3 class="text-xl font-bold mb-3">Share Projects</h3>
      <p class="text-gray-600">Post collaboration opportunities and overflow work to trusted partners.</p>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-md text-center">
      <div class="text-4xl text-blue-600 mb-4">
        <i class="fas fa-star"></i>
      </div>
      <h3 class="text-xl font-bold mb-3">Build Reputation</h3>
      <p class="text-gray-600">Earn reviews and ratings to showcase your agency's reliability and quality.</p>
    </div>
  </div>

  <!-- Subscription Tiers -->
  <div class="py-16">
    <h2 class="text-3xl font-bold text-center mb-12">Choose Your Plan</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Free Tier -->
      <div class="bg-white p-8 rounded-lg shadow-md border-2 border-gray-200">
        <h3 class="text-2xl font-bold mb-4">Free</h3>
        <p class="text-3xl font-bold text-blue-600 mb-6">$0<span class="text-lg text-gray-600">/mo</span></p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> 1 project per month</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> 5 responses per month</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Basic profile</li>
        </ul>
        <a href="/register" class="block text-center bg-gray-200 text-gray-800 px-6 py-3 rounded-lg font-semibold hover:bg-gray-300">
          Get Started
        </a>
      </div>

      <!-- Pro Tier -->
      <div class="bg-white p-8 rounded-lg shadow-md border-2 border-blue-500">
        <div class="text-center mb-4">
          <span class="bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-semibold">Popular</span>
        </div>
        <h3 class="text-2xl font-bold mb-4">Pro</h3>
        <p class="text-3xl font-bold text-blue-600 mb-6">$49<span class="text-lg text-gray-600">/mo</span></p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Unlimited projects</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Unlimited responses</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Enhanced profile</li>
        </ul>
        <a href="/register" class="block text-center bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700">
          Upgrade to Pro
        </a>
      </div>

      <!-- Premium Tier -->
      <div class="bg-white p-8 rounded-lg shadow-md border-2 border-yellow-500">
        <div class="text-center mb-4">
          <span class="bg-yellow-500 text-white px-3 py-1 rounded-full text-sm font-semibold">Elite</span>
        </div>
        <h3 class="text-2xl font-bold mb-4">Premium</h3>
        <p class="text-3xl font-bold text-blue-600 mb-6">$99<span class="text-lg text-gray-600">/mo</span></p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Everything in Pro</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Premium badge</li>
          <li class="flex items-center"><i class="fas fa-check text-green-500 mr-2"></i> Top listing priority</li>
        </ul>
        <a href="/register" class="block text-center bg-yellow-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-yellow-600">
          Go Premium
        </a>
      </div>
    </div>
  </div>
</div>
