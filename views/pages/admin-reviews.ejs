<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Manage Reviews</h1>
    <a href="/admin/dashboard" class="text-blue-600 hover:underline">← Back to Dashboard</a>
  </div>

  <% if (reviews.length > 0) { %>
    <div class="space-y-4">
      <% reviews.forEach(review => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-3">
                <div class="flex text-yellow-500">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <i class="fas fa-star <%= i <= review.rating ? '' : 'text-gray-300' %>"></i>
                  <% } %>
                </div>
                <span class="text-lg font-bold"><%= review.rating %>/5</span>
              </div>

              <p class="text-sm text-gray-600 mb-2">
                <strong>Reviewer:</strong> <a href="/agencies/<%= review.reviewer_agency_id %>" target="_blank" class="text-blue-600 hover:underline"><%= review.reviewer_name %></a>
                →
                <strong>Target:</strong> <a href="/agencies/<%= review.target_agency_id %>" target="_blank" class="text-blue-600 hover:underline"><%= review.target_name %></a>
              </p>

              <% if (review.project_title) { %>
                <p class="text-sm text-gray-600 mb-2">
                  <strong>Project:</strong> <%= review.project_title %>
                </p>
              <% } %>

              <% if (review.comment) { %>
                <p class="text-gray-700 mb-3"><%= review.comment %></p>
              <% } %>

              <p class="text-sm text-gray-500">
                <i class="fas fa-calendar"></i> <%= new Date(review.created_at).toLocaleDateString() %>
              </p>
            </div>

            <div class="ml-4">
              <form action="/admin/reviews/<%= review.id %>/delete" method="POST" class="inline">
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 text-sm"
                        onclick="return confirm('Delete this review? This will recalculate the target agency rating.')">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-xl text-gray-500">No reviews found</p>
    </div>
  <% } %>
</div>

  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

