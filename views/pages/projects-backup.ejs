<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
	  <!-- Header -->
	  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
	    <div>
	      <h1 class="text-4xl font-black text-gray-900 mb-2">
	        Project <span class="text-indigo-600">Marketplace</span>
	      </h1>
	      <p class="text-gray-600">Discover collaboration opportunities from agencies worldwide</p>
	    </div>
	    <% if (locals.user && user.status === 'approved') { %>
	      <a href="/projects/create" class="btn btn-primary whitespace-nowrap">
	        <i class="fas fa-plus mr-2"></i>Create Project
	      </a>
	    <% } %>
	  </div>

	  <!-- Filters -->
	  <div class="card p-6 mb-8">
	    <form method="GET" action="/projects" class="grid md:grid-cols-3 gap-4">
	      <div>
	        <label class="form-label">
	          <i class="fas fa-chart-line mr-2 text-emerald-600"></i>Platform
	        </label>
	        <select name="platform" class="form-select">
	          <option value="">All Platforms</option>
	          <option value="Google" <%= selectedPlatform === 'Google' ? 'selected' : '' %>>Google</option>
	          <option value="Meta" <%= selectedPlatform === 'Meta' ? 'selected' : '' %>>Meta</option>
	          <option value="TikTok" <%= selectedPlatform === 'TikTok' ? 'selected' : '' %>>TikTok</option>
	          <option value="LinkedIn" <%= selectedPlatform === 'LinkedIn' ? 'selected' : '' %>>LinkedIn</option>
	        </select>
	      </div>
	
	      <div>
	        <label class="form-label">
	          <i class="fas fa-project-diagram mr-2 text-indigo-600"></i>Project Type
	        </label>
	        <select name="type" class="form-select">
	          <option value="">All Types</option>
	          <option value="collaboration" <%= selectedType === 'collaboration' ? 'selected' : '' %>>Collaboration</option>
	          <option value="overflow" <%= selectedType === 'overflow' ? 'selected' : '' %>>Overflow</option>
	          <option value="shared_account" <%= selectedType === 'shared_account' ? 'selected' : '' %>>Shared Account</option>
	          <option value="joint_venture" <%= selectedType === 'joint_venture' ? 'selected' : '' %>>Joint Venture</option>
	          <option value="other" <%= selectedType === 'other' ? 'selected' : '' %>>Other</option>
	        </select>
	      </div>
	
	      <div class="flex items-end">
	        <button type="submit" class="btn btn-primary w-full">
	          <i class="fas fa-filter mr-2"></i>Apply Filters
	        </button>
	      </div>
	    </form>
	  </div>

	  <!-- Projects List -->
	  <% if (projects.length > 0) { %>
	    <div class="grid gap-6">
	      <% projects.forEach(project => { %>
	        <div class="card card-hover border-l-4 border-indigo-500">
	          <div class="flex flex-col lg:flex-row justify-between items-start gap-4">
	            <div class="flex-1">
	              <!-- Title and Badge -->
	              <div class="flex flex-wrap items-center gap-3 mb-3">
	                <h2 class="text-2xl font-bold">
	                  <a href="/projects/<%= project.id %>" class="text-gray-900 hover:text-indigo-600 transition"><%= project.title %></a>
	                </h2>
	                <% if (project.hide_identity === 1) { %>
	                  <span class="badge badge-secondary">
	                    <i class="fas fa-eye-slash mr-1"></i>Identity Hidden
	                  </span>
	                <% } %>
	                <% if (project.subscription_tier === 'premium') { %>
	                  <span class="badge badge-premium">
	                    <i class="fas fa-crown mr-1"></i>Elite Partner
	                  </span>
	                <% } else if (project.subscription_tier === 'pro') { %>
	                  <span class="badge badge-primary">
	                    <i class="fas fa-star mr-1"></i>Pro
	                  </span>
	                <% } %>
	              </div>
	              
	              <!-- Description -->
	              <p class="text-gray-600 mb-4 leading-relaxed"><%= project.description.substring(0, 200) %><%= project.description.length > 200 ? '...' : '' %></p>
	              
	              <!-- Tags -->
	              <div class="flex flex-wrap gap-2 mb-4">
	                <span class="badge badge-primary capitalize">
	                  <i class="fas fa-tag mr-1"></i><%= project.project_type.replace('_', ' ') %>
	                </span>
	                <% if (project.platforms_involved) { %>
	                  <% project.platforms_involved.split(',').slice(0, 3).forEach(platform => { %>
	                    <span class="badge badge-info">
	                      <i class="fas fa-chart-line mr-1"></i><%= platform.trim() %>
	                    </span>
	                  <% }) %>
	                <% } %>
	                <% if (project.budget_range) { %>
	                  <span class="badge badge-success">
	                    <i class="fas fa-dollar-sign mr-1"></i><%= project.budget_range %>
	                  </span>
	                <% } %>
	              </div>
	
	              <!-- Certifications -->
	              <% const projAgencyCerts = project.certifications ? JSON.parse(project.certifications) : []; %>
	              <% if (projAgencyCerts.length > 0) { %>
	                <div class="flex flex-wrap gap-2 mb-4">
	                  <% projAgencyCerts.slice(0, 3).forEach(cert => { %>
	                    <span class="badge badge-success-outline badge-sm">
	                      <i class="fas fa-certificate mr-1"></i><%= cert %>
	                    </span>
                  <% }) %>
	                  <% if (projAgencyCerts.length > 3) { %>
	                    <span class="badge badge-sm badge-secondary">
	                      +<%= projAgencyCerts.length - 3 %> more
	                    </span>
	                  <% } %>
	                </div>
	              <% } %>
	
	              <!-- Meta Info -->
	              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
	                <span class="flex items-center">
	                  <i class="fas fa-building mr-2 text-indigo-600"></i>
	                  <% if (project.is_hidden) { %>
	                    <span class="font-medium text-gray-600">Agency Hidden</span>
	                  <% } else { %>
	                    <a href="/agencies/<%= project.agency_id %>" class="hover:text-indigo-600 font-medium"><%= project.agency_name %></a>
	                  <% } %>
	                </span>
	                <span class="flex items-center">
	                  <i class="fas fa-star mr-1 text-amber-500"></i>
	                  <span class="font-semibold"><%= project.rating_average.toFixed(1) %></span>
	                </span>
	                <span class="flex items-center">
	                  <i class="fas fa-calendar mr-2 text-emerald-600"></i>
	                  <%= new Date(project.created_at).toLocaleDateString() %>
	                </span>
	                <% if (project.deadline) { %>
	                  <span class="flex items-center">
	                    <i class="fas fa-clock mr-2 text-red-600"></i>
	                    Deadline: <%= new Date(project.deadline).toLocaleDateString() %>
	                  </span>
	                <% } %>
	              </div>
	            </div>
	
	            <!-- Action Button -->
	            <div class="flex-shrink-0">
	              <a href="/projects/<%= project.id %>" class="btn btn-primary whitespace-nowrap block text-center">
	                View Details <i class="fas fa-arrow-right ml-2"></i>
	              </a>
	            </div>
	          </div>
	        </div>
	      <% }) %>
	    </div>
	  <% } else { %>
	    <div class="card p-16 text-center">
	      <div class="w-24 h-24 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-6">
	        <i class="fas fa-inbox text-5xl text-indigo-600"></i>
	      </div>
	      <h3 class="text-2xl font-bold text-gray-900 mb-3">No Projects Found</h3>
	      <p class="text-gray-600 mb-6">No projects match your current filters. Try adjusting your search criteria.</p>
	      <% if (locals.user && user.status === 'approved') { %>
	        <a href="/projects/create" class="btn btn-primary inline-block">
	          <i class="fas fa-plus mr-2"></i>Create the First Project
	        </a>
	      <% } %>
	    </div>
      <% } %>
    </div>
  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

