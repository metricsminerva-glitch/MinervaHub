<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">

<div class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-purple-50 via-blue-50 to-cyan-50">
  <div class="max-w-2xl w-full text-center">
    <!-- Animated Icon -->
    <div class="mb-8">
      <div class="w-32 h-32 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center mx-auto shadow-2xl">
        <i class="fas fa-exclamation-triangle text-6xl text-white"></i>
      </div>
    </div>
    
    <!-- Error Message -->
    <h1 class="text-8xl md:text-9xl font-black text-gradient mb-4">404</h1>
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Page Not Found</h2>
    <p class="text-xl text-gray-600 mb-8 max-w-lg mx-auto">
      Oops! The page you're looking for doesn't exist or has been moved to a new location.
    </p>
    
    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/" class="btn-gradient">
        <i class="fas fa-home mr-2"></i>Go Home
      </a>
      <a href="/projects" class="px-8 py-4 bg-white text-gray-700 rounded-xl font-bold text-lg hover:bg-gray-100 transition border-2 border-gray-200">
        <i class="fas fa-briefcase mr-2"></i>Browse Projects
      </a>
    </div>
    
    <!-- Help Text -->
    <p class="mt-12 text-gray-500">
      Need help? <a href="/" class="text-purple-600 hover:text-purple-700 font-semibold">Contact support</a>
    </p>
  </div>
</div>

  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

