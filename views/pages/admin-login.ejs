<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-gray-900 via-purple-900 to-gray-900">
  <div class="max-w-md w-full">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div class="w-20 h-20 bg-gradient-to-br from-purple-500 to-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-2xl">
        <i class="fas fa-shield-alt text-4xl text-white"></i>
      </div>
      <h1 class="text-4xl font-black text-white mb-2">Admin Portal</h1>
      <p class="text-gray-300">Minerva Metrics Hub Administration</p>
    </div>
    
    <!-- Login Form -->
    <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 border border-white/20">
      <form action="/admin/login" method="POST" class="space-y-6">
        <div>
          <label class="block text-sm font-semibold text-white mb-2">
            <i class="fas fa-envelope mr-2"></i>Admin Email
          </label>
          <input 
            type="email" 
            name="email" 
            required 
            placeholder="admin@minerva.com"
            class="w-full px-4 py-3 bg-white/90 border-2 border-white/30 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:bg-white transition"
          >
        </div>

        <div>
          <label class="block text-sm font-semibold text-white mb-2">
            <i class="fas fa-lock mr-2"></i>Password
          </label>
          <input 
            type="password" 
            name="password" 
            required 
            placeholder="••••••••"
            class="w-full px-4 py-3 bg-white/90 border-2 border-white/30 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 focus:bg-white transition"
          >
        </div>

        <button 
          type="submit" 
          class="w-full bg-gradient-to-r from-purple-500 to-blue-500 text-white py-4 rounded-xl font-bold text-lg hover:shadow-2xl transition transform hover:scale-105"
        >
          <i class="fas fa-sign-in-alt mr-2"></i>Access Admin Panel
        </button>
      </form>

      <!-- Security Notice -->
      <div class="mt-6 p-4 bg-yellow-500/20 border border-yellow-500/30 rounded-xl">
        <div class="flex items-start space-x-3">
          <i class="fas fa-exclamation-triangle text-yellow-300 mt-1"></i>
          <p class="text-yellow-100 text-sm">
            This is a secure area. All login attempts are monitored and logged.
          </p>
        </div>
      </div>
    </div>

    <!-- Back Link -->
    <p class="text-center mt-6">
      <a href="/" class="text-white/80 hover:text-white font-medium transition">
        <i class="fas fa-arrow-left mr-2"></i>Back to Main Site
      </a>
    </p>
  </div>
</div>

  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

