<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">My Projects</h1>
    <a href="/projects/create" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
      <i class="fas fa-plus"></i> Create New Project
    </a>
  </div>

  <% if (projects.length > 0) { %>
    <div class="space-y-6">
      <% projects.forEach(project => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h2 class="text-2xl font-bold">
                  <a href="/projects/<%= project.id %>" class="text-blue-600 hover:underline"><%= project.title %></a>
                </h2>
                <span class="px-3 py-1 rounded-full text-sm <%= project.status === 'open' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= project.status %>
                </span>
              </div>
              
              <p class="text-gray-600 mb-3"><%= project.description.substring(0, 200) %><%= project.description.length > 200 ? '...' : '' %></p>
              
              <div class="flex flex-wrap gap-2 mb-3">
                <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm capitalize">
                  <%= project.project_type.replace('_', ' ') %>
                </span>
                <% if (project.platforms_involved) { %>
                  <% project.platforms_involved.split(',').slice(0, 3).forEach(platform => { %>
                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">
                      <%= platform.trim() %>
                    </span>
                  <% }) %>
                <% } %>
              </div>

              <div class="flex items-center space-x-4 text-sm text-gray-500">
                <span>
                  <i class="fas fa-calendar"></i> 
                  <%= new Date(project.created_at).toLocaleDateString() %>
                </span>
                <% if (project.deadline) { %>
                  <span>
                    <i class="fas fa-clock"></i> 
                    Deadline: <%= new Date(project.deadline).toLocaleDateString() %>
                  </span>
                <% } %>
              </div>
            </div>

            <div class="flex flex-col space-y-2 ml-4">
              <a href="/projects/<%= project.id %>" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 text-center">
                View Details
              </a>
              <a href="/projects/<%= project.id %>/responses" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 text-center">
                <i class="fas fa-reply"></i> Responses
              </a>
              <% if (project.status === 'open') { %>
                <form action="/projects/<%= project.id %>/close" method="POST" class="inline">
                  <button type="submit" class="w-full bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700"
                          onclick="return confirm('Close this project?')">
                    Close
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <i class="fas fa-folder-open text-6xl text-gray-300 mb-4"></i>
      <p class="text-xl text-gray-500 mb-4">You haven't created any projects yet</p>
      <a href="/projects/create" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700">
        Create Your First Project
      </a>
    </div>
  <% } %>
    </div>
  </main>>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

