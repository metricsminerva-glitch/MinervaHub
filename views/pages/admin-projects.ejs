<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Manage Projects</h1>
    <a href="/admin/dashboard" class="text-blue-600 hover:underline">‚Üê Back to Dashboard</a>
  </div>

  <% if (projects.length > 0) { %>
    <div class="space-y-4">
      <% projects.forEach(project => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <h3 class="text-xl font-bold"><%= project.title %></h3>
                <span class="px-3 py-1 rounded-full text-sm <%= project.status === 'open' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= project.status %>
                </span>
              </div>

              <p class="text-sm text-gray-700 mb-3"><%= project.description.substring(0, 200) %><%= project.description.length > 200 ? '...' : '' %></p>

              <div class="grid md:grid-cols-2 gap-4 mb-3">
                <div>
                  <p class="text-sm text-gray-600">Agency: <a href="/agencies/<%= project.agency_id %>" target="_blank" class="text-blue-600 hover:underline"><%= project.agency_name %></a></p>
                  <p class="text-sm text-gray-600">Type: <span class="capitalize"><%= project.project_type.replace('_', ' ') %></span></p>
                  <% if (project.platforms_involved) { %>
                    <p class="text-sm text-gray-600">Platforms: <%= project.platforms_involved %></p>
                  <% } %>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Created: <%= new Date(project.created_at).toLocaleDateString() %></p>
                  <% if (project.deadline) { %>
                    <p class="text-sm text-gray-600">Deadline: <%= new Date(project.deadline).toLocaleDateString() %></p>
                  <% } %>
                  <% if (project.budget_range) { %>
                    <p class="text-sm text-gray-600">Budget: <%= project.budget_range %></p>
                  <% } %>
                </div>
              </div>
            </div>

            <div class="flex flex-col space-y-2 ml-4">
              <a href="/projects/<%= project.id %>" target="_blank" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 text-sm text-center">
                <i class="fas fa-eye"></i> View
              </a>
              <% if (project.status === 'open') { %>
                <form action="/admin/projects/<%= project.id %>/close" method="POST" class="inline">
                  <button type="submit" class="w-full bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 text-sm"
                          onclick="return confirm('Close this project?')">
                    <i class="fas fa-times-circle"></i> Close
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-xl text-gray-500">No projects found</p>
    </div>
  <% } %>
</div>

  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

