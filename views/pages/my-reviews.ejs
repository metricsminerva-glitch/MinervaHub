<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <h1 class="text-3xl font-bold mb-8">Reviews Received</h1>

  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-600">Overall Rating</p>
        <div class="flex items-center space-x-2">
          <div class="flex text-yellow-500 text-2xl">
            <% for (let i = 1; i <= 5; i++) { %>
              <i class="fas fa-star <%= i <= Math.round(agency.rating_average) ? '' : 'text-gray-300' %>"></i>
            <% } %>
          </div>
          <span class="text-3xl font-bold"><%= agency.rating_average.toFixed(1) %></span>
        </div>
      </div>
      <div class="text-right">
        <p class="text-sm text-gray-600">Total Reviews</p>
        <p class="text-3xl font-bold text-blue-600"><%= agency.rating_count %></p>
      </div>
    </div>
  </div>

  <% if (reviews.length > 0) { %>
    <div class="space-y-6">
      <% reviews.forEach(review => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="font-bold text-lg"><%= review.reviewer_name %></h3>
              <div class="flex text-yellow-500 mb-2">
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="fas fa-star <%= i <= review.rating ? '' : 'text-gray-300' %>"></i>
                <% } %>
              </div>
            </div>
            <span class="text-sm text-gray-500"><%= new Date(review.created_at).toLocaleDateString() %></span>
          </div>

          <% if (review.comment) { %>
            <p class="text-gray-700 mb-3"><%= review.comment %></p>
          <% } %>

          <% if (review.project_title) { %>
            <p class="text-sm text-gray-500">
              <i class="fas fa-project-diagram"></i> Project: <%= review.project_title %>
            </p>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <i class="fas fa-star text-6xl text-gray-300 mb-4"></i>
      <p class="text-xl text-gray-500">No reviews yet</p>
      <p class="text-gray-600 mt-2">Complete projects and collaborate with other agencies to receive reviews</p>
    </div>
  <% } %>
    </div>
  </main>>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
</body>
</html>

