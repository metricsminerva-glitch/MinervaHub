<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== "undefined" ? title + " - " : "" %>Minerva Metrics Hub</title>
  
  <!-- TailwindCSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    body {
      font-family: "Inter", sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  
  <!-- Navigation -->
  <%- include("../partials/navbar") %>
  
  <!-- Flash Messages -->
  <%- include("../partials/flash") %>
  
  <!-- Main Content -->
  <main class="flex-grow">

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <!-- Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
    <div>
      <h1 class="text-4xl font-black text-gray-900 mb-2">
        <i class="fas fa-building text-blue-600 mr-3"></i>Manage <span class="text-gradient">Agencies</span>
      </h1>
      <p class="text-gray-600">Review, approve, and manage agency registrations</p>
    </div>
    <a href="/admin/dashboard" class="px-4 py-2 bg-white border-2 border-gray-200 text-gray-700 rounded-xl font-semibold hover:border-purple-300 transition">
      <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
    </a>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-2xl shadow-lg p-6 mb-8 border border-gray-100">
    <form method="GET" action="/admin/agencies" class="flex flex-col md:flex-row gap-4">
      <div class="flex-1">
        <label class="block text-sm font-semibold text-gray-700 mb-2">
          <i class="fas fa-filter mr-2 text-purple-600"></i>Filter by Status
        </label>
        <select name="status" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition">
          <option value="">All Statuses</option>
          <option value="pending" <%= statusFilter === 'pending' ? 'selected' : '' %>>Pending</option>
          <option value="approved" <%= statusFilter === 'approved' ? 'selected' : '' %>>Approved</option>
          <option value="rejected" <%= statusFilter === 'rejected' ? 'selected' : '' %>>Rejected</option>
          <option value="banned" <%= statusFilter === 'banned' ? 'selected' : '' %>>Banned</option>
        </select>
      </div>
      <div class="flex items-end">
        <button type="submit" class="w-full md:w-auto bg-gradient-purple-blue text-white px-8 py-3 rounded-xl font-bold hover:shadow-xl transition transform hover:scale-105">
          <i class="fas fa-search mr-2"></i>Apply Filter
        </button>
      </div>
    </form>
  </div>

  <!-- Agencies List -->
  <% if (agencies.length > 0) { %>
    <div class="space-y-6">
      <% agencies.forEach(agency => { %>
        <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-2xl transition">
          <div class="flex flex-col lg:flex-row justify-between items-start gap-4">
            <div class="flex-1">
              <!-- Title and Badges -->
              <div class="flex flex-wrap items-center gap-3 mb-3">
                <h3 class="text-2xl font-bold text-gray-900"><%= agency.agency_name %></h3>
                
                <!-- Status Badge -->
                <span class="px-4 py-1 rounded-full text-sm font-bold
                  <%= agency.status === 'approved' ? 'bg-green-100 text-green-700' : '' %>
                  <%= agency.status === 'pending' ? 'bg-yellow-100 text-yellow-700' : '' %>
                  <%= agency.status === 'rejected' ? 'bg-red-100 text-red-700' : '' %>
                  <%= agency.status === 'banned' ? 'bg-gray-800 text-white' : '' %>">
                  <%= agency.status.toUpperCase() %>
                </span>
                
                <!-- Subscription Badge -->
                <span class="<%= agency.subscription_tier === 'premium' ? 'badge-premium' : '' %>
                  <%= agency.subscription_tier === 'pro' ? 'badge-pro' : '' %>
                  <%= agency.subscription_tier === 'free' ? 'px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-bold' : '' %>">
                  <%= agency.subscription_tier.toUpperCase() %>
                </span>
              </div>
              
              <!-- Contact Info -->
              <div class="grid md:grid-cols-2 gap-3 mb-4">
                <div class="flex items-center text-gray-600">
                  <i class="fas fa-user mr-2 text-purple-600"></i>
                  <span><%= agency.contact_name %></span>
                </div>
                <div class="flex items-center text-gray-600">
                  <i class="fas fa-envelope mr-2 text-blue-600"></i>
                  <span><%= agency.email %></span>
                </div>
                <% if (agency.location) { %>
                  <div class="flex items-center text-gray-600">
                    <i class="fas fa-map-marker-alt mr-2 text-red-600"></i>
                    <span><%= agency.location %></span>
                  </div>
                <% } %>
                <% if (agency.website) { %>
                  <div class="flex items-center text-gray-600">
                    <i class="fas fa-globe mr-2 text-green-600"></i>
                    <a href="<%= agency.website %>" target="_blank" class="text-purple-600 hover:text-purple-700 font-medium"><%= agency.website %></a>
                  </div>
                <% } %>
              </div>

              <!-- Stats -->
              <div class="flex flex-wrap gap-4 text-sm text-gray-500">
                <span class="flex items-center">
                  <i class="fas fa-star text-yellow-500 mr-1"></i>
                  <span class="font-semibold"><%= agency.rating_average.toFixed(1) %></span>
                  <span class="ml-1">(<%= agency.rating_count %> reviews)</span>
                </span>
                <span class="flex items-center">
                  <i class="fas fa-calendar mr-2 text-blue-600"></i>
                  Joined <%= new Date(agency.created_at).toLocaleDateString() %>
                </span>
              </div>
            </div>

            <!-- Actions -->
            <div class="flex flex-col gap-2 min-w-[200px]">
              <!-- Plan & Limits Settings -->
              <button onclick="toggleSettings(<%= agency.id %>)" class="w-full bg-gradient-to-r from-purple-500 to-blue-500 text-white px-4 py-2 rounded-xl font-semibold hover:shadow-lg transition">
                <i class="fas fa-cog mr-2"></i>Plan & Limits
              </button>
              
              <div id="settings-<%= agency.id %>" class="hidden mt-4 p-4 bg-gray-50 rounded-xl border-2 border-gray-200">
                <form action="/admin/agencies/<%= agency.id %>/update-plan" method="POST" class="space-y-3">
                  <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Plan</label>
                    <select name="plan_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                      <% plans.forEach(plan => { %>
                        <option value="<%= plan.id %>" <%= agency.plan_id === plan.id ? 'selected' : '' %>>
                          <%= plan.name %> (<%= plan.max_projects === -1 ? 'âˆž' : plan.max_projects %> projects)
                        </option>
                      <% }) %>
                    </select>
                  </div>
                  
                  <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Custom Max Projects (optional)</label>
                    <input type="number" name="custom_max_projects" value="<%= agency.custom_max_projects || '' %>" placeholder="Leave empty for plan default" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                  </div>
                  
                  <div>
                    <label class="block text-xs font-bold text-gray-700 mb-1">Custom Max Responses (optional)</label>
                    <input type="number" name="custom_max_responses" value="<%= agency.custom_max_responses || '' %>" placeholder="Leave empty for plan default" class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-purple-500">
                  </div>
                  
                  <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-green-700 transition text-sm">
                    <i class="fas fa-save mr-2"></i>Save Settings
                  </button>
                </form>
              </div>
              <% if (agency.status === 'pending') { %>
                <form action="/admin/agencies/<%= agency.id %>/approve" method="POST" class="w-full">
                  <button type="submit" class="w-full bg-gradient-to-r from-green-500 to-green-600 text-white px-4 py-2 rounded-xl font-semibold hover:shadow-lg transition">
                    <i class="fas fa-check mr-2"></i>Approve
                  </button>
                </form>
                <form action="/admin/agencies/<%= agency.id %>/reject" method="POST" class="w-full">
                  <button type="submit" class="w-full bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-xl font-semibold hover:shadow-lg transition">
                    <i class="fas fa-times mr-2"></i>Reject
                  </button>
                </form>
              <% } %>
              
              <% if (agency.status === 'approved') { %>
                <form action="/admin/agencies/<%= agency.id %>/ban" method="POST" class="w-full">
                  <button type="submit" class="w-full bg-gray-800 text-white px-4 py-2 rounded-xl font-semibold hover:bg-gray-900 transition">
                    <i class="fas fa-ban mr-2"></i>Ban Agency
                  </button>
                </form>
              <% } %>
              
              <% if (agency.status === 'banned') { %>
                <form action="/admin/agencies/<%= agency.id %>/unban" method="POST" class="w-full">
                  <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-blue-600 text-white px-4 py-2 rounded-xl font-semibold hover:shadow-lg transition">
                    <i class="fas fa-undo mr-2"></i>Unban
                  </button>
                </form>
              <% } %>
              
              <form action="/admin/agencies/<%= agency.id %>/delete" method="POST" class="w-full" onsubmit="return confirm('Are you sure you want to delete this agency? This action cannot be undone.')">
                <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded-xl font-semibold hover:bg-red-700 transition">
                  <i class="fas fa-trash mr-2"></i>Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="bg-white rounded-2xl shadow-lg p-16 text-center border border-gray-100">
      <div class="w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mx-auto mb-6">
        <i class="fas fa-inbox text-5xl text-gray-400"></i>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-3">No Agencies Found</h3>
      <p class="text-gray-600">No agencies match your current filter criteria.</p>
    </div>
  <% } %>
</div>

  </main>
  
  <!-- Footer -->
  <%- include("../partials/footer") %>
  
  <script>
    function toggleSettings(agencyId) {
      const settingsDiv = document.getElementById('settings-' + agencyId);
      if (settingsDiv.classList.contains('hidden')) {
        settingsDiv.classList.remove('hidden');
      } else {
        settingsDiv.classList.add('hidden');
      }
    }
  </script>
</body>
</html>

