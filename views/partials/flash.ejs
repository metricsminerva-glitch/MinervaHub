<% if (locals.error && error.length > 0) { %>
  <div class="fixed top-24 right-4 z-50 max-w-md animate-slide-in">
    <div class="bg-white rounded-xl shadow-2xl border-l-4 border-red-500 p-4 flex items-start space-x-3">
      <div class="flex-shrink-0">
        <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
          <i class="fas fa-exclamation-circle text-red-600"></i>
        </div>
      </div>
      <div class="flex-1">
        <p class="font-semibold text-gray-900">Error</p>
        <% error.forEach(function(msg) { %>
          <p class="text-gray-600 text-sm"><%= msg %></p>
        <% }); %>
      </div>
      <button onclick="this.parentElement.parentElement.remove()" class="text-gray-400 hover:text-gray-600">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>
  <script>
    setTimeout(() => {
      document.querySelectorAll('.animate-slide-in').forEach(el => {
        el.style.transition = 'opacity 0.3s';
        el.style.opacity = '0';
        setTimeout(() => el.remove(), 300);
      });
    }, 5000);
  </script>
<% } %>

