<header class="bg-white shadow-md">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-8">
        <a href="/" class="text-2xl font-bold text-blue-600">
          <i class="fas fa-chart-line"></i> Minerva Metrics Hub
        </a>
        <div class="hidden md:flex space-x-4">
          <a href="/projects" class="text-gray-700 hover:text-blue-600">Projects</a>
          <% if (locals.user) { %>
            <a href="/dashboard" class="text-gray-700 hover:text-blue-600">Dashboard</a>
            <a href="/projects/my" class="text-gray-700 hover:text-blue-600">My Projects</a>
          <% } %>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <% if (locals.user) { %>
          <div class="flex items-center space-x-3">
            <span class="text-sm text-gray-600">
              <%= user.agency_name %>
              <% if (user.subscription_tier === 'premium') { %>
                <span class="ml-1 px-2 py-1 text-xs bg-yellow-100 text-yellow-800 rounded">Premium</span>
              <% } else if (user.subscription_tier === 'pro') { %>
                <span class="ml-1 px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">Pro</span>
              <% } %>
            </span>
            <a href="/profile/edit" class="text-gray-700 hover:text-blue-600">
              <i class="fas fa-user-circle text-xl"></i>
            </a>
            <a href="/logout" class="text-gray-700 hover:text-red-600">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </div>
        <% } else if (locals.isAdmin) { %>
          <div class="flex items-center space-x-3">
            <span class="text-sm text-gray-600 font-semibold">Admin Panel</span>
            <a href="/admin/logout" class="text-gray-700 hover:text-red-600">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </div>
        <% } else { %>
          <a href="/login" class="text-gray-700 hover:text-blue-600">Login</a>
          <a href="/register" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Register Agency
          </a>
        <% } %>
      </div>
    </div>
  </nav>
</header>
